<style>
  .contentBody {
    padding: 0.5rem 1rem;
  }

  .header-view {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    flex-wrap: wrap;
    gap: 1rem;
  }
  .container-title {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .portada-container {
    width: 100%;
    height: 300px;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    display: block;
  }
  .portada-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .title {
    display: flex;
    justify-content: center;
    align-items: baseline;
    margin-bottom: 0%;
  }
  .information {
    /* display: flex; */
    /* margin: 0% 50px;
    padding: 50px 50px;
    justify-content: center; */
  }
  .innformationEvent {
    width: 500px;
    height: 300px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    padding: 5px 15px;
  }
  .informationCompany {
    width: 260px;
    height: 340px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    background-color: #fff;
  }
  .content {
    display: flex;
    justify-content: space-between;
    margin-top: 0%;
  }
  .select {
    display: flex;
    margin-left: 100px;
    margin-top: 0%;
    justify-content: space-between;
    margin-top: -50px;
  }
  .button {
    margin-left: 300px;
    margin-right: 100px;
    margin-top: -50px;
  }

  @media (min-width: 768px) {
    .contentBody {
      padding: 1rem 2rem;
    }
    .header-view {
      flex-direction: row;
    }
  }
</style>

<script>
  // Establece la fecha de inicio del período de inscripción
  const startDate = new Date("August 29, 2024 00:00:00").getTime();

  const updateCountDown = () => {
    // Obtiene la fecha y hora actual
    const now = new Date().getTime();

    // Calcula la diferencia entre la fecha actual y la fecha de inicio
    const timeLeft = startDate - now;

    // Cálculo de días, horas, minutos y segundos
    const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
    const hours = Math.floor(
      (timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

    // Muestra el resultado en el elemento con id="timer"
    const timer = document.getElementById("timer");
    if (timer) {
      timer.innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

      // Si la cuenta regresiva ha terminado
      if (timeLeft < 0) {
        clearInterval(countdown);
        const countdownElement = document.getElementById("countdown");
        countdownElement!.innerHTML = "¡Inscripciones cerradas!";
      }
    }
  };

  updateCountDown();

  // Actualiza la cuenta regresiva cada segundo
  const countdown = setInterval(updateCountDown, 1000);
</script>
